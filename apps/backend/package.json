{
  "name": "@marketing-app/backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "rimraf build && tsc -p tsconfig.json",
    "lint": "eslint . --ext ts --max-warnings 0",
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:up": "docker-compose -p marketing-app -f docker-compose.dev.yml up -d",
    "db:down": "docker-compose -p marketing-app -f docker-compose.dev.yml  down",
    "docker:up": "docker-compose -p marketing-app up -d",
    "docker:build": "docker-compose -p marketing-app build",
    "docker:down": "docker-compose -p marketing-app down",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.14",
    "@types/express-serve-static-core": "^4.19.0",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "nodemon": "^2.0.20",
    "rimraf": "^5.0.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@prisma/client": "5.15.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.0.3",
    "express": "4.19.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "http-status": "^1.5.3",
    "joi": "^17.7.0",
    "pm2": "^5.3.1",
    "prisma": "5.15.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.13.0"
  }
}
